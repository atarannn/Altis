      {
        label: 'Проєкти',
        link: pagesLink[0].projects
      }
    ]
    var cards = [
      {
        class: 'kyiv',
        city: 'київ',
        date: '2021',
        title: 'Рівердейл',
        img: 'projects/projects-cards/1.jpg',
        url: 'project-page.html',
      },
      {
        city: 'київ',
        date: '2021',
        title: 'Терракот',
        img: 'projects/projects-cards/2.jpg',
        url: 'project-page.html',
      },
      {
        city: 'київ',
        date: '2021',
        title: 'Графіт',
        img: 'projects/projects-cards/3.jpg',
        url: 'project-page.html',
      },
      {
        city: 'київ',
        date: '2021',
        title: 'Першоцвіт',
        img: 'projects/projects-cards/4.jpg',
        url: 'project-page.html',
      },
      {
        city: 'київ',
        date: '2021',
